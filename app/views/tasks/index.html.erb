<p id="notice"><%= notice %></p>


<div class="row">
  <div class="col-md-3">
      <%= link_to new_task_path, remote: true do %>
          <button class="btn btn-success"><span class="glyphicon glyphicon-plus"></span> Add Task </button>
      <% end %>

      <div id="task-form" style="display:none;"></div> 
  </div>

  <div class="col-md-8"> 
    <h2>Tasks</h2>
    <div id="tasks">
      <div class="row">
        <%= render @tasks %>
      </div>
    </div>
  </div>

</div>